<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->

<!-- ADD YOU CODE TO CREATE THE EDIT PAGE -->

<div class="container">
    <div clas="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title:</label>
                    <input type="text" class="form-control" id="nameTextField" 
                    placeholder="Enter the Book Title" name="name" 
                    value="<%= book.name %>" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Author:</label>
                    <input type="text" class="form-control" id="authorTextField" 
                    placeholder="Enter the Book's Author" name="author" 
                    value="<%= book.author %>" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Year:</label>
                    <input type="text" class="form-control" id="publishedTextField" 
                    placeholder="Enter Year Book was published" name="published" 
                    value="<%= book.published %>" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Description:</label>
                    <input type="text" class="form-control" id="descriptionTextField" 
                    placeholder="Enter the Book's Brief Description" name="description" 
                    value="<%= book.description %>" required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price:</label>
                    <input type="text" class="form-control" id="priceTextField" 
                    placeholder="Enter Pric of the Book" name="price" 
                    value="<%= book.price %>" required>
                </div>

                <button class="btn btn-info" type="submit">
                    <i class="fas fa-edit"></i>Submit</button>
                    <a herf="/book-list" class="btn btn-dark"> 
                        <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>

